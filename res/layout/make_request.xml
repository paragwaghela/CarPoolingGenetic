<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background" >

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Make Request"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#B45F04"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/txtTitle"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" >

        <LinearLayout
            android:id="@+id/llReg1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical" >

            
            
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:text="Source "
                    android:textColor="#B45F04"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- <EditText
                    android:id="@+id/editSource"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Source"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textSize="16sp" /> -->
                    <Spinner
	                    android:id="@+id/spMSource"
	                    android:layout_width="fill_parent"
	                    android:layout_height="45dp"
	                    android:textSize="16sp" />
                    
            </LinearLayout>

           
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:text="Destination"
                    android:textColor="#B45F04"
                    android:textSize="16sp"
                    android:textStyle="bold" />

               <!--  <EditText
                    android:id="@+id/editDest"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Destination"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textSize="16sp" /> -->
                    <Spinner
	                    android:id="@+id/spMDest"
	                    android:layout_width="fill_parent"
	                    android:layout_height="45dp"
	                    android:textSize="16sp" />
            </LinearLayout>

           
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="1dp"
                android:orientation="horizontal"
                 >
				<TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:text="Pick Up Time"
                    android:textColor="#B45F04"
                    android:textSize="16sp"
                    android:textStyle="bold" />
               <Button
                    android:id="@+id/btnSurceTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pick Up Time" />

                <TextView
                    android:id="@+id/etSourceTime"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:hint="Surce Time" />
               
            </LinearLayout>
                   
            <Button
                android:id="@+id/btnMakeReq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/blue_rounded_rectangle"
                android:text="Make Request"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
                    
    </ScrollView>

</RelativeLayout>